# ============================================
# BETIX - Environment Variables Template
# ============================================
# Copy this file to .env and fill in your values

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/betix

# Redis (optional)
REDIS_URL=redis://localhost:6379/0

# Betfair API
BETFAIR_APP_KEY=your_app_key_here
BETFAIR_USERNAME=your_username_here
BETFAIR_PASSWORD=your_password_here
BETFAIR_CERT_PATH=./certs/betfair.crt
BETFAIR_KEY_PATH=./certs/betfair.key

# Google Sheets
GOOGLE_SHEETS_CREDENTIALS_PATH=./credentials/google_service_account.json
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here

# Encryption (for Betfair credentials in DB)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_encryption_key_here

# JWT Authentication
JWT_SECRET=your_jwt_secret_here_min_32_chars
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Stripe Payments
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Bot Configuration
BOT_TIMEZONE=Europe/Bucharest
BOT_RUN_HOUR=13
BOT_RUN_MINUTE=0
BOT_INITIAL_STAKE=10
BOT_MAX_PROGRESSION_STEPS=7

# Server
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Dashboard Admin (legacy)
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=change_this_password

# Anthropic AI (optional)
ANTHROPIC_API_KEY=your_anthropic_key_here

# Environment
DEBUG=False
ENVIRONMENT=production
